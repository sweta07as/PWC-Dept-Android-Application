<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05396c"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#a53293"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="110dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:text="PATNA WOMEN'S COLLEGE"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/subHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:text="@string/subHeading"
        android:textColor="#f0ad4e"
        android:alpha="100"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/pwclogo"
        android:layout_width="75dp"
        android:layout_height="128dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/pwclogo_removed" />

    <TextView
        android:id="@+id/chooseLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/pwclogo"
        android:text="Choose Language"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/languages"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwclogo"
        android:layout_marginTop="80dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/chooseLang"
        android:background="#fff"
        android:padding="20dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/languages"
        android:inputType="text"
        android:background="#a53293"
        android:textColorHint="#DEC1E3"
        android:textColor="#ffffff"
        android:hint="Enter Your Name"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8BC34A"
        android:letterSpacing="0.1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="@font/lato"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#f0ad4e"
        android:fontFamily="@font/roboto_slab"
        android:text="Welcome"
        android:textSize="25sp" />


</RelativeLayout>